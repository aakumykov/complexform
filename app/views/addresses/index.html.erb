<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table cellpadding="4" cellspacing="3" border="2">
  <thead>
    <tr>
      <th>Street</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= link_to address.street, address_path(address) %></td>
        <td><%= link_to(address.person.name, person_path(address.person)) if not address.person.nil? %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

